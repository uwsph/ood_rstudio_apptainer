<%-
  cpus = sph_cpus.to_i
  mem = sph_mem.to_i
  days = sph_days.to_i
-%>
---
batch_connect:
  template: "basic"
  conn_params:
    - csrf_token
script:
  native:
    - "--cpus-per-task"
    - "<%= cpus %>"
    - "--mem"
    - "<%= mem * 1024 %>"
    - "--partition"
    - "<%= sph_partition %>"
    - "--time"
    - "<%= days %>-0"
